<!DOCTYPE html>
<html {{ site.language_attributes }}>
	<head>
		<meta charset="{{ site.charset }}" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
			
		{# WordPress stuff #}
		{{ function('wp_head') }}
		
		{# Use this block to add stuff to the head from page templates  #}
		{% block html_head %}
		{% endblock %}
	</head>
	<body class="{{ body_class }}" data-template="base.twig">
		<a class="screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header id="header" class="header">
			{% block header %}
				{% include 'layout/header.twig' %}
			{% endblock %}
		</header>
		<main id="content" role="main" class="main">
			{% block content %}
				Sorry, no content
			{% endblock %}
		</main>
		<footer id="footer" class="footer">
			{% block footer %}
				{% include 'layout/footer.twig' %}
			{% endblock %}
		</footer>
		{{ function('wp_footer') }}
	</body>
</html>
